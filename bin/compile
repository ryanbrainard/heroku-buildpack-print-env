#!/usr/bin/env bash
set -x

echo 'env:'
env

cp -r $3 $1/happy_town

echo 'envdir crazy_town env:'
mkdir -p $1/crazy_town
for f in $(ls $3); do
  if [ -s $3/$f ]; then
    tr "\n" "\0" > $1/crazy_town/$f < $3/$f
  else
    echo "\n" > $1/crazy_town/$f
  fi
done
envdir $1/crazy_town env

echo 'env (again):'
env

echo 'export and env'
for f in $(ls $3); do
  grep -v 'EXCLUDE' && export "$f=$(cat $3/$f)" 
done
env
